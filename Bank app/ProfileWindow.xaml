<Window x:Class="Bank_app.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_app"
        mc:Ignorable="d"
        Title="ProfileWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Frame x:Name="userTab" Grid.Column="0" NavigationUIVisibility="Hidden"></Frame>
                <Frame x:Name="workingFrame" Grid.Column="1" NavigationUIVisibility="Hidden"></Frame>
            </Grid>
        </Grid>
        <Frame x:Name="optionsTab" Grid.Row="0" NavigationUIVisibility="Hidden"></Frame>
        
    </Grid>
</Window>
