<Page x:Class="Bank_app.ProfilePages.OptionsTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bank_app.ProfilePages"
      mc:Ignorable="d" 
      d:DesignHeight="151.132" d:DesignWidth="800"
      Title="OptionsTab">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" BorderThickness="0 0 0 10" Content="Pay" BorderBrush="#FF65B4FF" Background="{x:Null}" Click="btnClickPay"></Button>
        <Button Grid.Column="1" BorderThickness="0 0 0 10" Content="My payments" Background="{x:Null}" BorderBrush="#FF65B4FF" Click="btnClickMyPayments"></Button>
        <Button Grid.Column="2" BorderThickness="0 0 0 10" Content="My accounts" Background="{x:Null}" BorderBrush="#FF65B4FF" Click="btnClickMyAccounts"></Button>
    </Grid>
</Page>
